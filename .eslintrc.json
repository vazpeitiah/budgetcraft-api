{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@stylistic/js"],
  "rules": {
    "semi": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "@stylistic/js/max-len": "warn",
    "no-console": "error",
    "@typescript-eslint/no-misused-promises": [
      "error",
      {
        "checksVoidReturn": {
          "arguments": false
        }
      }
    ]
  }
}
